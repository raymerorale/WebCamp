<%- include("../partials/header") %>
<%- include("../partials/alert") %>

<div class="col-10 col-md-6 col-lg-4 rounded ml-auto mr-auto mt-4 bg-white p-3 shadow">
    <h1 class="pt-2 mb-3 text-center">Edit Profile</h1>
    <div class="mt-4">
        <p class="font-sm text-secondary">Fields marked * are required.</p>
        <form class="needs-validation" action="/profile?_method=PUT" method="POST" novalidate>
            <div class="form-group">
                <label>Complete Name*</label>
                <input value="<%= user.completeName %>" name="user[completeName]" class="form-control" type="text" placeholder="Complete Name" required>
            </div>
            <div class="form-group">
                <label>Email*</label>
                <input value="<%= user.email %>" name="user[email]" class="form-control" type="text" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
            </div>
            <div class="form-group">
                <label>Contact Number*</label>
                <input value="<%= user.contact %>" name="user[contact]" class="form-control" type="tel" pattern="[0-9]{11}" required>
            </div>
            <div class="form-group">
                <label>Display Picture</label>
                <div class="custom-file">
                    <input value="<%= user.displayImg %>" name="user[displayImg]" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose image...</label>
                </div>
            </div>
            
            </div>
            
            <div class="form-group mt-4">
                <button class="btn btn-primary w-100">Update</button">
            </div>
            
        </form>
    </div>
</div>
<%- include("../partials/footer") %>