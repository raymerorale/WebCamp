<%- include("../partials/header") %>
<%- include("../partials/alert") %>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead text-center"><%= campground.name %></p>
            <div class="card shadow mb-4">
                <div class="card-header">
                    <i class="fa fa-calendar-alt"></i>
                    Booking Window
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%= campground.starting %> - <%= campground.ending %></li>
                </ul>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header">
                    <i class="fa fa-smile"></i>
                    Amenities
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <% if(campground.amenities == ''){ %>
                            <span class="text-secondary">not specified</span>
                        <%} else %>
                            <%= campground.amenities %>
                    </li>
                </ul>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header">
                    <i class="fa fa-phone"></i>
                    Contact
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><%= campground.contact %></li>
                </ul>
            </div>
            <div class="card shadow">
                <div class="mb-0 pb-0" style="overflow:hidden;background:none!important;height:300px;">
                    <iframe class="card-img-top" height="300" id="gmap_canvas" src="https://maps.google.com/maps?q=<%= campground.location %>&t=&z=9&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                    
                </div>
                <div class="mt-0 card-header">
                    <i class="fas fa-map-marked-alt"></i>
                    Location
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%= campground.location %></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>">
                <div class="card-body p-3">
                    <h5 class="card-title float-right">
                        <% if(campground.price == 0 || campground.price == null){ %>
                            Free
                        <% } else { %>
                        â‚±<%= campground.price.toFixed(2) %>/night</h5>
                        <% } %>
                    <h4 class="card-title float-left"><a href=""><%= campground.name %></a></h4>
                    <p class="card-text float-left" style="text-indent: 50px;"><%= campground.description %></p>
                    <p class="card-text float-left">
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <form class="float-right ml-2" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <p><a class="card-text float-right btn text-light btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a></p>
                    <% } %>
                </div>
            </div>
            <div class="card mt-3 mb-3 bg-light">
                <div class="card-header">
                    <a class="btn btn-success float-right" href="/campgrounds/<%= campground._id %>/comments/new">
                        Leave a Review</a>
                </div>
                <ul class="list-group list-group-flush">
                    <% campground.comments.forEach(function (comment) { %>
                        <li class="list-group-item">
                            <p class="m-0">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right text-secondary" style="font-size: 15px !important;">10 days ago</span>
                            </p>
                            <p class="float-left"><%= comment.text %></p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <div class="mt-5">
                                    <a class="btn btn-sm btn-info float-left" 
                                    href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                    <form class="float-left ml-2" 
                                    action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            <% } %>
                        </li> 
                    <% }) %>
                </ul>
            </div> 
        </div>
        
        
        
        
        
    </div>
</div>


<%- include("../partials/footer") %>