<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world.</p>
            <a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
            <form class="form-inline float-right" action="/campgrounds/search" method="POST">
                <input class="form-control mr-2" name="search" type="search" placeholder="Search campground" aria-label="Search">
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </header>

    <div class="card-columns">
        <% campgrounds.forEach(function(campground) { %>
            <div>
                <div class="card mb-3">
                    <img src=" <%= campground.image %>" class="card-img-top">
                    <div class="card-body">
                        <h6 class="card-title"><%= campground.name %></h6>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<style type="text/css">
    footer{
        margin-top: 3em;
    }
</style>
<%- include("../partials/footer") %>